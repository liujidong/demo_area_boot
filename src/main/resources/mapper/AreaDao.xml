<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper>
    <select id="queryArea" resultType="com.imooc.demo.entity.Area">
        SELECT * FROM tb_area
        ORDER BY priority
        DESC
    </select>
    <select id="queryAreaById" resultType="com.imooc.demo.entity.Area">
        SELECT * FROM tb_area
        WHRE area_id=#{oid}
    </select>
    <insert id="inserArea" useGeneratedKeys="true" keyProperty="areaId" keyColumn="area_id" parameterType="com.imooc.demo.entity.Area">
        INSERT INTO
        tb_area(area_name,priority,create_time,last_edit_time)
        VALUES(#{areaName},#{priority},#{createTime},#{lastEditTime})
    </insert>
    <update id="updateArea" parameterType="com.imooc.demo.entity.Area">
        update tb_area
        <set>
            <if test="areaName!=null">area_name=#{areaName}</if>
            <if test="priority!=null">priority=#{priority}</if>
        </set>
        where area_id=#{oid}
    </update>
    <delete id="deleteArea">
        DELETE FROM tb_area
        WHERE area_id=#{area_id}
    </delete>
</mapper>